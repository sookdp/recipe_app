{% extends 'base.html.twig' %}

{% block title %}Les plats du Monde{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">üåç Les plats du Monde</h1>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            {% for recipe in recipes %}
                <div class="col d-flex justify-content-center">
                    <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden bg-dark" style="max-width: 320px;">
                        <!-- Image -->
                        <div class="position-relative">
                            <img src="{{ recipe.image|default(asset('build/img/fot-logo.png')) }}"
                                 class="card-img-top"
                                 alt="{{ recipe.title }}"
                                 style="height: 200px; object-fit: cover;">
                        </div>

                        <!-- Contenu -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-light">{{ recipe.title }}</h5>
                            <p class="card-text text-truncate text-light" style="max-height: 50px;">{{ recipe.description }}</p>

                            <a href="{{ path('app_recipedetails', {'id': recipe.id}) }}"
                               class="btn btn-light mt-auto"
                               style="width: 80%; align-self: center;">
                                Voir plus
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-muted text-center">Aucune recette trouv√©e.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
